<h1>Profiles Search</h1>

<%= form_for search_path, method: :get do |f| %>
  <p>
    <%= f.label "Search for" %>
    <%= text_field_tag :q, params[:q] %>
    <%= submit_tag "Go", name: nil %>
  </p>
<% end %>

<ul>
  <% @profiles.each do |profile| %>
    <li>
      <h3>
        <%= link_to profile.nome, controller: "profiles", action: "show", id: profile._id%>
      </h3>
    </li>
  <% end %>
</ul>
<%= link_to '<- todos perfis', profiles_path %>