<h1>Profiles Search</h1>

<%= form_for search_path, method: :get do |f| %>
  <p>
    <%= f.label "Search for" %>
    <%= text_field_tag :q, params[:q] %>
    <%= submit_tag "Go", name: nil %>
  </p>
<% end %>

<ul>
  <% @profiles.each do |profile| %>
    <li>
      <h3>
        <%= link_to profile.try(:highlight).try(:nome) ? profile.highlight.title[0].html_safe : profile.nome,
          controller: "profiles",
          action: "show",
          id: profile._id%>
      </h3>
      <% if profile.try(:highlight).try(:descricao) %>
        <% profile.highlight.descricao.each do |snippet| %>
          <p><%= snippet.html_safe %>...</p>
        <% end %>
      <% end %>
    </li>
  <% end %>
</ul>
<%= link_to '<- todos perfis', profiles_path %>